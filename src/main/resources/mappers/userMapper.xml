<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="com.hsp.memo.user.dao.UserDAO">
  	
  	<insert id="insertUser" parameterType="map">
  		INSERT INTO
  			`user`
  		(
  			`loginid`
  			, `password`
  			, `name`
  			, `email`
  			, `createdAt`
  			, `updatedAt`
  		)
  		VALUE
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{email}
			, now()
			, now()
		)  		
  		
  	</insert>
  	
  	
  	<select id="selectUser" parameterType="map" resultType="com.hsp.memo.user.dao.UserDAO">
  		SELECT
  			`id`
  			, `loginid`
  			, `password`
  			, `name`
  			, `email`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`user`
  		WHERE
  			`loginid` = #{loginId}
  			AND `password` = #{password}
  	
  	
  	</select>
  
  
  </mapper>

